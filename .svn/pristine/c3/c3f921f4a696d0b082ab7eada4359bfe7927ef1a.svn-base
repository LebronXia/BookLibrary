<?xml version="1.0" encoding="utf-8"?>    
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@drawable/item_shape"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">
        <TextView 
            style="@style/TitleTextType"           
            android:text="借阅记录"
            />
        
        <TextView 
            android:id="@+id/tv_borrowedhistory"
            style="@style/ContentTextType"
            android:text="1.2015.01.20至2015.02.15"
            />
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"           
            android:orientation="horizontal"
            >
        <TextView 
            android:id="@+id/tv_nowdate"
            style="@style/ContentTextType"          
            android:text="2.2015.06.01，"
            />
        
        <TextView 
            android:id="@+id/tv_nowreturn"
            style="@style/ContentTextType"
            android:text="应于2015.06.20归还"
            />
        </LinearLayout>
    </LinearLayout>

