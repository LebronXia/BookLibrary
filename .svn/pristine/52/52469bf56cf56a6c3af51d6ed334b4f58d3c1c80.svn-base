<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:orientation="vertical" >

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_shape"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        >
     <RelativeLayout
         	android:layout_marginTop="@dimen/activity_vertical_margin"
       	 	android:layout_marginBottom="@dimen/activity_vertical_margin"
        	android:layout_marginRight="@dimen/activity_horizontal_margin"
        	android:layout_marginLeft="@dimen/activity_horizontal_margin"                          
            android:layout_width="match_parent"
            android:layout_height="36dp"                     
            android:gravity="center_vertical" >
            
       <TextView 
             android:id="@+id/tv_item_position"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/background_green"
             android:textSize="20sp"
             android:text="1"
             />
       <TextView 
           android:layout_toRightOf="@id/tv_item_position"
           android:id="@+id/tv_search_bookname"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="4dp"
           android:textSize="16sp"
           android:text="Android应用开发案例教程"
           />    
           
       <ImageView 
           android:id="@+id/ib_bookstates"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
		   android:layout_alignParentRight="true"
		   android:visibility="gone"
           android:background="@drawable/bookreturn"
           />
         
         
     </RelativeLayout>
     
     <!-- 四个图片按钮 -->
		<LinearLayout 
	            android:id="@+id/ll_fourimagebutton"
		        android:layout_width="match_parent"
		        android:layout_height="32dp"
		        android:layout_marginBottom="4dp"
                android:background="@color/darkgray"		        	        
		        android:orientation="horizontal"
		        android:visibility="gone"
		        >
		        
		        <ImageButton
		            android:id="@+id/ib_borrowed"
		            style="@style/ImageButton"
		            android:clickable="false"
		            android:background="@drawable/borrowbuttom_shape"	            	            
		            />
		        
		        <ImageButton
		            android:id="@+id/ib_return"
		            style="@style/ImageButton"
		            android:clickable="false"
		            android:background="@drawable/returnbutton_shape" 	            	            
		            />
		        
		        <ImageButton
		            android:id="@+id/ib_order"
		            style="@style/ImageButton"
		            android:clickable="false"
		            android:background="@drawable/orderbutton_shape"	            	            
		            />

		        <ImageButton
		            android:id="@+id/ib_favorate"
		            style="@style/ImageButton"
		            android:background="@drawable/favoritebutton_shape"
		            android:clickable="false" />
        
		    </LinearLayout>
	</LinearLayout>
</LinearLayout>
